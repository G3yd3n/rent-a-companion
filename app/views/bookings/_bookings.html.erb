
<div class="col-12 col-md-4 col-xl-3 container-fluid align-justify-center">
  <div>
    <h1>Here are all current bookings of <%= current_user.first_name %></h1>
  <div class="col-12 col-md-4 col-xl-3">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5> <% @user_bookings.each do |booking| %>
      <div>
      <img class="card-img-top" src="https://source.unsplash.com/random/?headshot" alt="Card image cap">
      <h5 class="card-title"><%= booking.user.first_name %></h5>
      </div>
      <div>
      <img class="card-img-top" src="https://source.unsplash.com/random/?headshot" alt="Card image cap">
      <h5 class="card-title"><%= booking.companion.user.first_name %></h5>
      </div>
      <% end %>
    </div>
  </div>
</div>
