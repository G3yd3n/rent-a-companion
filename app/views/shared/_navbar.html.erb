<div class="container">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to companions_path, class: "navbar-brand" do %>
    <i class="fab fa-gratipay fa-3x" style="color: #e91e63"></i>

    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", companions_path, class: "nav-link m-2" %>
          </li>
          <li class="nav-item">
            <% @companions = Companion.all %>
            <% @ids = [] %>
            <% @companions.each do |companion| %>
              <% @ids << companion.id %>
            <% end %>
            <%= link_to "Suprise me?", companion_path(@ids.sample), class: "nav-link btn btn-outline-info m-2" %>
          </li>
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle m-2" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://robohash.org/companion" />
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "See my bookings", bookings_path(@bookings), class: "dropdown-item" %>
              <%= link_to "Edit Profile", edit_user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
