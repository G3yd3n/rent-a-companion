<div class="container" style= "width: 800px">
  <div class="card-trip" >
    <img style="height: 200px; width: 300px;" src="https://source.unsplash.com/random/?headshot" alt="Card image cap" />
    <div>
      <% @companion.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 200, width: 300, crop: :fill %>
      <% end %>
    </div>
    <div class="card-trip-infos">
      <div>
        <h2><%= @companion.user.first_name %>, <%= @companion.user.last_name%></h2>
        <p><%= @companion.description %></p>
        <p><%= link_to "Let's have a chat", new_companion_booking_path(@companion), class: "mt-3 btn btn-danger btn-sm" %></p>
        </p><%= link_to "Leave a review", new_companion_review_path(@companion), class: "mt-3 btn btn-success btn-sm" %></p>
      </div>
    </div>
  </div>
  <p>
  <ul class="list-group">
  <h4>Reviews for <%= @companion.user.first_name %></h4>
  <% @companion.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
</div>
